extends layout/main-footer-light

block variables

  - var title = 'basket'
  - var mainPage = false


block content
  main.page-content
    .page-inner.page-inner--w2
      .basket__page-header
        .row.align-items-end.justify-content-between
          .col-md-6
            .d-md-none.mb-3
              a.link.link--black(href='#') Назад к покупкам
            .basket-form__title Оформление заказа
            .basket-form__text    Обработка заказов ежедневно
              nobr 09:00 — 21:00
          .col-auto.d-none.d-md-block
            span 
              a.link.link--black(href='#') Назад к покупкам

      form.form.basket__body(novalidate="novalidate")
        .basket__body-left
          include modules/basket/items-in-order
          include modules/basket/basket-form
        
        .basket__body-right
          include modules/basket/total-cost

block footer-popups
  include modules/popups/show-on-map-popup  

