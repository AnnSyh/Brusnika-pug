extends layout/main

block variables
  - var title = 'Личный кабинет'
  - var mainPage = false


block content
  main.page-content.page-content--personal-area 

    .page-inner.page-inner--w2

      .personal-grid

        .personal-grid-block-one 
          .page-heading-title.page-heading-title_personal.uppercase= title
          div
            .h2.mb-2 Здравствуйте, Максим
            a.d-none.d-lg-inline-flex.link.link--black_border.uppercase(href='#') ВЫЙТИ                  

        .personal-grid-block-two
          .row.personal-blocks

            each item in personalMenuDataWithOutEnter
              .col-lg-4.mb-lg-4
                a.personal-block(href=`${item.url}`)
                  span.dashboard-title= item.name 
            
            .col-lg-3.mb-lg-4.d-lg-none
                a.personal-block(href='#')
                  span.h3 Выйти 
